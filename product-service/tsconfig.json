{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@interfaces/*": ["src/types/*"],

      "@mocks/*": ["src/mocks/*"],
      "custom-module-type": ["src/types/custom-module-type"]
    },
    
  
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
  
    "outDir": "lib",
    "resolveJsonModule": true
  },"ts-node": {"files":true},
}